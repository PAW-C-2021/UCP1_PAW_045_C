@model IEnumerable<PraktikumUCP.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Supplier")
            </th>
            <th>
                @Html.DisplayName("No Telepon Supplier")
            </th>
            <th>
                @Html.DisplayName("Alamat Supplier")
            </th>
            <th>
                @Html.DisplayName("Jenis Barang")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaSupplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoTlpSupplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlamatSupplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisBarang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSupplier"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdSupplier"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdSupplier"><i class="fa fa-trash-alt fa-l"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
