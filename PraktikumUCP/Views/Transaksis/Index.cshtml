@model IEnumerable<PraktikumUCP.Models.Transaksi>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Jumlah Barang Dibeli")
            </th>
            <th>
                @Html.DisplayName("Tanggal Transaksi")
            </th>
            <th>
                @Html.DisplayName("Id Barang Navigation")
            </th>
            <th>
                @Html.DisplayName("Id Pembeli Navigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JmlBrgDibeli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TglTransaksi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBarangNavigation.IdBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPembeliNavigation.IdPembeli)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransaksi"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdTransaksi"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransaksi"><i class="fa fa-trash-alt fa-l"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
